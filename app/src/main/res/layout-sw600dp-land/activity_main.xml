<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_evo"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@id/search_bar"
            android:background="@drawable/ic_edittext"
            android:paddingLeft="15.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340.0dip"
            android:layout_marginRight="340.0dip"
            android:layout_marginBottom="0.0dip"
            android:hint="@string/search_bar"
            android:inputType="textCapSentences"
            android:imeOptions="actionSearch" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dip">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/news"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:layout_marginRight="100.0dip"
            android:src="@drawable/ic_news_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/search_voice_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:src="@drawable/ic_mic_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/scanner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100.0dip"
            android:layout_marginTop="30.0dip"
            android:src="@drawable/ic_youtube_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100.0dip"
            android:layout_marginRight="100.0dip"
            android:src="@drawable/ic_map_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/translate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100.0dip"
            android:src="@drawable/ic_translate_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_gravity="center|top"
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100.0dip"
            android:layout_marginTop="100.0dip"
            android:src="@drawable/ic_settings_24dp"
            app:tint="@null"
            app:elevation="0.0dip"
            app:backgroundTint="?android:colorAccent"/>

    </FrameLayout>

</LinearLayout>
